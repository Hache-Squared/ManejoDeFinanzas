@model TipoCuenta
@{

    ViewData["title"] = "Crear Tipo Cuenta";
}

<h1>Crear Tipo De Cuenta</h1>

<h5>
    Nos referimos a como se agruparan las cuentas.
    por ejemplo si esta es de: Prestamos, Tarjetas de credito, etc.
</h5>

@{
    //por defecto no es necesario poner el "asp-controller" porque la vista ya esta en la carpeta referenciada por el controlador, pero como buena practica,

    //Los errores ModelOnly se mostraran a nivel de todo el modelo, ignorando validaciones de los campos
}

<div class="text-danger" asp-validation-summary="ModelOnly">

</div>


<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3">
        <label class="form-label" asp-for="Nombre"></label>
        <input type="text" id="Nombre" name="Nombre" class="form-control" asp-for="Nombre"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>



    <button class="btn btn-primary" type="submit">Crear</button>
</form>


@section Scripts {
    <!--
        ESTA ES UNA SECCION DE SCRIPTS QUE SE CARGARA EN _Layout EN Shared Y SIRVE PARA CARGAR CIERTOS SCRIPTS 
        QUE REQUIEREN ESTAR AL FINAL DE NUESTRO _Layout, ES UNA FORMA DE HACER IMPORTACIONES DESDE VARIAS PARTES DEL PROYECTO
    -->
    <partial name="_ValidationScriptsPartial" />
}